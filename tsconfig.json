//==================================================== HANDBOOK-COMMON
{
  "compilerOptions": {
    /* ----------------------------------------------- NPM Library specific */
    "declaration": true,
    /* ----------------------------------------------- Basic Options */
    "target": "es2022",
    "outDir": "dist",
    "module": "commonjs",
    "incremental": true,
    "sourceMap": true,
    /* ----------------------------------------------- Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    /* ----------------------------------------------- Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      /* Support absolute imports with a leading '/' */
      "src/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    /* ----------------------------------------------- Experimental Options */
    "experimentalDecorators": true,
    //REVIEW: A type referenced in a decorated signature must be imported with 'import type' or a namespace import when 'isolatedModules' and 'emitDecoratorMetadata' are enabled.
    //    "emitDecoratorMetadata": true,
    /* ----------------------------------------------- Advanced Options */
    //    "forceConsistentCasingInFileNames": true,
    /* ----------------------------------------------- Libs */
    // libs: []
    /* ----------------------------------------------- Rest */
    "skipLibCheck": true
    //    "resolveJsonModule": true
    /* Enable importing .json files. */
  },
  "include": [
    "src/**/*"
  ]
}
